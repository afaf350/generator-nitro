<div class="a-image{% if modifier %} a-image--{{modifier}}{% endif %}">
	<img class="a-image__image js-a-image--lazyload"
		data-sizes="auto"
		src="{{srcset.fallback.x1}}"
		srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
		data-srcset="{% for renditions in srcset.renditions %}{{rendition.x1}} {{rendition.media}}w{% if npt loop.last %}, {% endif %}{% endfor %}"
		alt="{{alt}}">
	{% pattern name='loader' %}
</div>
